{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./tools/mcp-server"
  },
  "include": [
    "tools/mcp-server/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}